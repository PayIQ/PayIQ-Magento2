<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="PayIQ\Payments\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="PayIQ\Payments\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">payiqLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">PayIQ\Payments\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Model\PaymentInformationManagement">
        <plugin name="payiq_payments_checkout_model_paymentinformationmanagement" type="PayIQ\Payments\Model\Checkout\PaymentInformationManagement\Plugin" sortOrder="1" />
    </type>
</config>
